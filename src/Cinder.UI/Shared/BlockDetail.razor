@inherits BlockDetailModel

@if (Block != null)
{
    <div class="table-container">
        <table class="table is-fullwidth">
            <tbody>
            <tr>
                <th width="15%">Height</th>
                <td>@Block.BlockNumber</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>@Block.TimestampAsHumanString (@Block.TimestampAsDate.ToString("R"))</td>
            </tr>
            <tr>
                <th>Transactions</th>
                <td>@Block.TransactionCount</td>
            </tr>
            <tr>
                <th>Relayed By</th>
                <td>
                    <NavLink href="@($"/address/{Block.Miner}")">@Block.MinerDisplay</NavLink>
                </td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>@Block.Difficulty</td>
            </tr>
            <tr>
                <th>Total Difficulty</th>
                <td>@Block.TotalDifficulty</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>@Block.SizeAsString bytes</td>
            </tr>
            <tr>
                <th>Gas Used</th>
                <td>@Block.GasUsed</td>
            </tr>
            <tr>
                <th>Gas Limit</th>
                <td>@Block.GasLimit</td>
            </tr>
            <tr>
                <th>Extra Data</th>
                <td>@Block.ExtraData</td>
            </tr>
            <tr>
                <th>Hash</th>
                <td>@Block.Hash</td>
            </tr>
            <tr>
                <th>Parent Hash</th>
                <td>
                    <NavLink href="@($"/block/{Block.ParentHash}")">@Block.ParentHash</NavLink>
                </td>
            </tr>
            <tr>
                <th>Sha3Uncles</th>
                <td>@Block.Sha3Uncles</td>
            </tr>
            <tr>
                <th>Nonce</th>
                <td>@Block.Nonce</td>
            </tr>
            </tbody>
        </table>
    </div>
}